// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String?

  // OAuth fields
  oauthProvider   String? // e.g., "linuxdo"
  oauthId         String? // User ID from OAuth provider
  oauthUsername   String? // Username from OAuth provider
  avatarUrl       String? // Avatar URL from OAuth provider
  trustLevel      Int?    // Trust level from Linux DO
  isAdmin         Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([oauthProvider, oauthId])
  @@index([oauthProvider])
}

model Camera {
  id        String   @id // 规范化品牌键，如 "sony"
  name      String   // 标准化显示名，如 "Sony"
  createdAt DateTime @default(now())

  photos Photo[]
}

model Lens {
  id        String   @id // 规范化品牌键，如 "canon"
  name      String   // 标准化显示名，如 "Canon"
  createdAt DateTime @default(now())

  photos Photo[]
}

model Photo {
  id              String   @id @default(uuid())
  title           String
  url             String
  thumbnailUrl    String?
  storageProvider String   @default("local")
  storageKey      String?
  width           Int
  height          Int
  size            Int?
  isFeatured      Boolean  @default(false)
  dominantColors  String?  // JSON array of hex colors, e.g. ["#ff0000", "#00ff00"]
  fileHash        String?  // SHA-256 hash of the original file for duplicate detection
  createdAt       DateTime @default(now())

  // Equipment relations
  cameraId String?
  lensId   String?
  camera   Camera? @relation(fields: [cameraId], references: [id])
  lens     Lens?   @relation(fields: [lensId], references: [id])

  // EXIF Information (raw data from image)
  cameraMake   String?
  cameraModel  String?
  lensModel    String?  // 原始镜头信息
  focalLength  String?
  aperture     String?
  shutterSpeed String?
  iso          Int?
  takenAt      DateTime?
  latitude     Float?
  longitude    Float?
  orientation  Int?
  software     String?
  exifRaw      String?

  categories Category[]
  stories    Story[]    @relation("PhotoStories")
  comments   Comment[]
  albums     Album[]    @relation("AlbumPhotos")

  @@index([cameraId])
  @@index([lensId])
  @@index([fileHash])
}

model Album {
  id          String   @id @default(uuid())
  name        String
  description String?
  coverUrl    String?
  isPublished Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos Photo[] @relation("AlbumPhotos")

  @@index([isPublished])
  @@index([sortOrder])
  @@index([createdAt])
}

model Category {
  id     String  @id @default(uuid())
  name   String  @unique
  photos Photo[]
}

model Setting {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model Story {
  id           String   @id @default(uuid())
  title        String
  content      String // Markdown content
  coverPhotoId String?
  isPublished  Boolean  @default(false)
  storyDate    DateTime @default(now()) // 叙事日期：叙事内容关联的日期（如旅行日期）
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  photos Photo[] @relation("PhotoStories")

  @@index([isPublished])
  @@index([storyDate])
  @@index([createdAt])
  @@index([coverPhotoId])
}

model Comment {
  id        String   @id @default(uuid())
  photoId   String
  author    String
  email     String?
  avatarUrl String?  // User avatar URL (from OAuth provider)
  content   String
  status    String   @default("pending") // pending, approved, rejected
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  photo Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@index([photoId])
  @@index([status])
  @@index([createdAt])
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  content     String // Markdown content
  category    String   @default("未分类") // Blog category
  tags        String   @default("") // Comma-separated tags
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isPublished])
  @@index([createdAt])
  @@index([category])
}

model FriendLink {
  id          String   @id @default(cuid())
  name        String
  url         String
  description String?
  avatar      String?
  featured    Boolean  @default(false)
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([sortOrder])
  @@index([featured])
}
