// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Photo {
  id              String   @id @default(uuid())
  title           String
  url             String
  thumbnailUrl    String?
  storageProvider String   @default("local")
  storageKey      String?
  width           Int
  height          Int
  size            Int?
  isFeatured      Boolean  @default(false)
  createdAt       DateTime @default(now())

  // EXIF Information
  cameraMake   String?
  cameraModel  String?
  lens         String?
  focalLength  String?
  aperture     String?
  shutterSpeed String?
  iso          Int?
  takenAt      DateTime?
  latitude     Float?
  longitude    Float?
  orientation  Int?
  software     String?
  exifRaw      String?

  categories Category[]
  stories    Story[]    @relation("PhotoStories")
  comments   Comment[]
  albums     Album[]    @relation("AlbumPhotos")
}

model Album {
  id          String   @id @default(uuid())
  name        String
  description String?
  coverUrl    String?
  isPublished Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos Photo[] @relation("AlbumPhotos")

  @@index([isPublished])
  @@index([sortOrder])
  @@index([createdAt])
}

model Category {
  id     String  @id @default(uuid())
  name   String  @unique
  photos Photo[]
}

model Setting {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model Story {
  id          String   @id @default(uuid())
  title       String
  content     String // Markdown content
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos Photo[] @relation("PhotoStories")

  @@index([isPublished])
  @@index([createdAt])
}

model Comment {
  id        String   @id @default(uuid())
  photoId   String
  author    String
  email     String?
  content   String
  status    String   @default("pending") // pending, approved, rejected
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  photo Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@index([photoId])
  @@index([status])
  @@index([createdAt])
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  content     String // Markdown content
  category    String   @default("未分类") // Blog category
  tags        String   @default("") // Comma-separated tags
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isPublished])
  @@index([createdAt])
  @@index([category])
}
